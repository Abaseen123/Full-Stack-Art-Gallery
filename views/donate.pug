doctype html
html(lang="en")
    head
        title Donate
        
        style. 
            *{
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body{
                background-color: lightgrey;
                font-family: Helvetica;
            }
            .wrapper{
                background-color: white;
                width:500px;
                padding:25px;
                margin:25px
                box-shadow: 0px 0px 20px rgba(0,0,0,0.5);
            }
            .wrapper h2{
                background-color: white;
                color: purple;
                font-size: 25px;
                padding: 10px;
                margin-bottom: 20px;
                text-align: center;
                border: 1px
            }
            h4{
                padding-bottom: 5px;
                color: purple;
            }
            .input-group{
                margin-bottom:8px;
                width:100%;
                position:relative;
                display:flex;
                flex-direction:row;
                padding:5px 0;
            }
            .input-box{
                width:100%;
                margin-right:12px;
                position:relative;
            }
            .input-box:last-child{
                margin-right:0;
            }
            .name{
                padding:14px 10px 14px 50px;
                width:100%
                background-color: white;
                border: 1px solid black;
                outline: none;
                letter-spacing:1px;
                transition:0.3s;
                border-radius:3px;
                color:black;
            }
            button{
                width:100%;
                background: transparent;
                broder:none;
                background: purple;
                color: white;
                padding: 15px;
                border-radius: 4px;
                font-size: 16px;
                transition: all 0.35s ease;
            }
    body
        include ./header
        h1 Please donate for server costs!
        div(class="wrapper")
            h2 Payment Form 
            form
                h4 Account 
                div(class="input-group")
                    div(class="input-box")
                        input(type="text", placeholder="Full Name", required class="name")
                        i(class="fa fa-user icon")
                    div(class="input-box")
                        input(type="text", placeholder="Username", required class ="name")
                div(class="input-group")
                    div(class="input-box")
                        input(type="email", placeholder="Email Adress", required class="name")
                div(class="input-group")
                    div(class="input-box")
                        h4 Date of Birth 
                        input(type="text", placeholder="DD", class="dob")
                        input(type="text", placeholder="MM", class="dob")
                        input(type="text", placeholder="YYYY", class="dob")  
                    div(class="input-box")
                       h4 Gender
                       input(type="radio", id="b1", name="gender", checked class="radio")
                       label(for="b1") Male
                       input(type="radio", id="b2", name="gender", class="radio")
                       label(for="b2") Female
                div(class="input-group")
                    div(class="input-box")
                        h4 Payment Details
                        input(type="radio", name="pay", id="bc1", checked class="radio")  
                        label(for="bc1")
                            span Credit Card
                        input(type="radio", name="pay", id="bc2", class="radio")
                        label(for="bc1")
                            span Visa
                div(class="input-group")
                    div(class="input-box")
                        input(type="tel", placeholder="Card Number", required class="name")
                div(class="input-group")
                    div(class="input-box")
                        input(type="tel", placeholder="Card CVC", required class="name")
                    div(class="input-box")
                        select
                            option 01 June 
                            option 02 June
                            option 03 June  
                        select 
                            option 2022
                            option 2021
                div(class="input-group")
                    div(class="input-box")
                        button(onclick="https://www.youtube.com/watch?v=dQw4w9WgXcQ&ab_channel=RickAstley") Donate Now
