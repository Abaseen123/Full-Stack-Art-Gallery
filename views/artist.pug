doctype html
html(lang="en")
    head
        title Artist Page
        link( href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        style. 
            img {
                max-width: 100%;
                height: auto;
                width: auto\9;
            }
            body{
                text-align:center;
                background-color: lightgrey;
            }
body
    include ./header
    br
    -var nameOfArtist
    -for(let i=0; i < length; i++)
        -if(artworks[i].id===id)
            -nameOfArtist = artworks[i].artist
    -for(let i=0; i < length; i++)
        -if(artworks[i].artist===nameOfArtist)
            h3 #{artworks[i].name}
            img(src=artworks[i].image)
            h4 #{artworks[i].description}
            h4 #{artworks[i].year} || Medium : #{artworks[i].medium} || Category: #{artworks[i].category}
            button(onclick='alert("You liked this artwork!")') Like